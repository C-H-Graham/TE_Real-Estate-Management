@model Capstone.Models.Application

@{
    ViewData["Title"] = "Apply";
}

<h2>Tenant Application Form</h2>

<h4>By submitting the form below, you agree to all terms and conditions and allow CNJ Managment to use the provided information to perform a background check.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Apply">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UnitID" class="control-label"></label>
                <input asp-for="UnitID" class="form-control" />
                <span asp-validation-for="UnitID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SocialSecurityNumber" class="control-label"></label>
                <input asp-for="SocialSecurityNumber" class="form-control" />
                <span asp-validation-for="SocialSecurityNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastResidenceOwner" class="control-label"></label>
                <input asp-for="LastResidenceOwner" class="form-control" />
                <span asp-validation-for="LastResidenceOwner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastResidenceContactPhoneNumber" class="control-label"></label>
                <input asp-for="LastResidenceContactPhoneNumber" class="form-control" />
                <span asp-validation-for="LastResidenceContactPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastResidenceTenancyStartDate" class="control-label"></label>
                <input asp-for="LastResidenceTenancyStartDate" class="form-control" />
                <span asp-validation-for="LastResidenceTenancyStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastResidenceTenancyEndDate" class="control-label"></label>
                <input asp-for="LastResidenceTenancyEndDate" class="form-control" />
                <span asp-validation-for="LastResidenceTenancyEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="EmploymentStatus" /> @Html.DisplayNameFor(model => model.EmploymentStatus)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="EmployerName" class="control-label"></label>
                <input asp-for="EmployerName" class="form-control" />
                <span asp-validation-for="EmployerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployerContactPhoneNumber" class="control-label"></label>
                <input asp-for="EmployerContactPhoneNumber" class="form-control" />
                <span asp-validation-for="EmployerContactPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnnualIncome" class="control-label"></label>
                <input asp-for="AnnualIncome" class="form-control" />
                <span asp-validation-for="AnnualIncome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfResidents" class="control-label"></label>
                <input asp-for="NumberOfResidents" class="form-control" />
                <span asp-validation-for="NumberOfResidents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfCats" class="control-label"></label>
                <input asp-for="NumberOfCats" class="form-control" />
                <span asp-validation-for="NumberOfCats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfDogs" class="control-label"></label>
                <input asp-for="NumberOfDogs" class="form-control" />
                <span asp-validation-for="NumberOfDogs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Search" asp-action="Index">Back to All Properties</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
